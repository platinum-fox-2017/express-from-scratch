//ini akan masuk ke entry, untuk memilih server port mana yang digunakan

const http = require('http');
const app = require('../app.js'); //menarik app.js (keluar dari bin, akses app.js)
const PORT = 3000; //port localhost yang kita inginkan

const port = parseInt(process.env.PORT, 10) || PORT; //(mengakses PORT)
app.set('port', port);

const server = http.createServer(app);

server.listen(port, () => {
    console.log(`Application running on port: ${PORT}`)
});