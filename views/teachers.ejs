<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
    <table class="table">
      <h2>Teachers Data</h2>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach(teacher =>{%>
          <tr>
            <td><%=teacher.id%></td>
            <td><%=teacher.first_name%></td>
            <td><%=teacher.last_name%></td>
            <td><%=teacher.email%></td>
            <%if(teacher.subjectId){%>
              <td><%=teacher.subjectId%></td>
            <%} else {%>
              <td>unassigned</td>
            <%}%>
            <td>
              <a href="/teachers/edit/<%=teacher.id%>">Edit</a>
              <a href="#"> | </a>
              <a href="/teachers/delete/<%=teacher.id%>" action="/teachers" onclick="return confirm('Delete this teacher?')" >Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </div>
  </body>
</html>
