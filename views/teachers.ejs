<!DOCTYPE html>
<html>
    <head>
        <title>Teachers</title>
    </head>
    <body>
        <h1>Teachers Data</h1>
        <h2><a href= "/teachers/add/">add teacher</a></h2>
        <table class = "table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                        <%data.sort((a,b) => a.id - b.id)
                        .forEach(value => {%>
                    <tr>
                        <td><%= value.id %></td>
                        <td><%= value.first_name %></td>
                        <td><%= value.last_name %></td>
                        <td><%= value.email %></td>
                        <% if (value.subject === null) { %>
                            <td>unassigned<td></td>
                        <% } else { %>
                            <td><%= value.Subject.subject_name%></td>
                        <% } %>
                        <td>
                            <a href= "/teachers/edit/<%= value.id %>">Edit</a>
                            <a>|</a>
                            <a href= "/teachers/delete/<%= value.id %>">Delete</a>
                        </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
    </body>
    <footer>

    </footer>
</html>




