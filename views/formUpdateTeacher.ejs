<body>
    <h1>Update Teacher</h1>
    <form name="formUpdate" method="POST" action="/teachers/update/<%= data.id %>">
    <table>
        <tr>
        <td>First Name</td>
        <td><input type="text" name="first_name" value="<%= data.first_name %>" required></td>
        </tr>
        <tr>
        <td>Last Name</td>
        <td><input type="text" name="last_name" value="<%= data.last_name %>" required></td>
        </tr>
        <tr>
        <td>Email</td>
        <td><input type="email" name="email" value="<%= data.email %>" required></td>
        </tr>
        <tr>
        <td>Subject</td>
        <td><select name="id_subject">

          <%data_subject.forEach((data_subject) =>
          {
            %>
            <option value="<%=data_subject.id%>" <%if (data_subject.id === data.id_subject) {%> selected   <%}%> > <%=data_subject.subject_name%> </option>
          <%})%>
          </select></td>
        </tr>
        <tr>
        <td colspan="2"><input type="submit" value="Save" ></td>
        </tr>
    </table>
    </form>
</body>
