<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
</head>

<body>
    <%if (data.length === 0) { %>
        <h1 class="text-center">BELUM ADA DATA</h1>
        <% }else { %>
            <h1 class="text-center">
                <%=data[0].Subject.subject_name%>
            </h1>
            <div class="col-md-6 offset-md-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Student Name</th>
                            <th scope="col">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.map((datastudent)=>{ %>
                            <tr>
                                <th scope="row">
                                    <%=datastudent.Student.id %>
                                </th>
                                <td>
                                    <%=datastudent.Student.first_name + ' ' + datastudent.Student.last_name %>
                                </td>
                                <td>
                                    <% if (datastudent.score === null) { %>
                                        <a href="/subjects/<%=datastudent.Subject.id%>/<%=datastudent.Student.id%>/give-score">Give Score</a>
                                        <% }else{ %>
                                            <%=datastudent.score%>
                                                <%} %>
                                </td>
                            </tr>
                            <% })%>
                    </tbody>
                </table>
            </div>
            <% }%>
</body>

</html>