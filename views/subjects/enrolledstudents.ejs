<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Subjects Data</title>

   <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <ul id="nav_bar">
         <li><a href="/students">Students</a></li>
         <li><a href="/teachers">Teachers</a></li>
         <li><a href="/subjects">Subjects</a></li>
    </ul>
    <h1><%=subject.subject_name%></h1>

    <h3><a href="/subjects">return to subject list</a></h3>

    <table>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Score</th>
        </tr>
        <% for( let i = 0; i < subjectstudent.length; i ++ ){%>
        <tr>
            <td><%=i+1%></td>
            <td> <%=subjectstudent[i].Student.fullname()%> </td>
            <td>
                <%if(subjectstudent[i].Score == null){%>
                <a href="/subjects/<%=subjectstudent[i].id%>/givescore">Give Score</a>
                <% }  else {%>
                <%= subjectstudent[i].Score; %>
            <% } %>
            </td>
        <tr>
        <% } %>
    </table>
</body>
</html>
