<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Subjects Data</title>

  <link rel="stylesheet" href="/css/style.css">
</head>

    <body>
        <ul id="nav_bar">
             <li><a href="/students">Students</a></li>
             <li><a href="/teachers">Teachers</a></li>
             <li><a href="/subjects">Subjects</a></li>
        </ul>
        <h1>
            All Subject Data
        </h1>
        <h3>
            <a href = "/subjects/add">add subject</a>
        </h3>

        <div>
            <table>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>Subject Name</th>
                    <th>Teachers</th>
                    <th>Actions</th>
                </tr>
                    <% for(let i = 0; i < subjects.length; i++){%>
                        <tr>
                            <td><%=i+1%></td>
                            <td><%=subjects[i].id%></td>
                            <td><%=subjects[i].subject_name%></td>
                            <td>
                                <ol>
                                    <% for( let j = 0; j < subjects[i].Teachers.length; j++){%>
                                        <li><%=subjects[i].Teachers[j].fullname()%></li>
                                    <%}%>
                                </ol>
                            </td>
                            <td>
                                <a href="/subjects/<%=subjects[i].id%>/enrolledstudents">Enrolled Students
                            </td>
                        </tr>
                    <%}%>
            </table>
        </div>
    </body>
