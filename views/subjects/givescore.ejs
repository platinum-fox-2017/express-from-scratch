<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Subjects Data</title>

   <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <ul id="nav_bar">
         <li><a href="/students">Students</a></li>
         <li><a href="/teachers">Teachers</a></li>
         <li><a href="/subjects">Subjects</a></li>
    </ul>
    <h1>Score: <%=subjectstudent.Subject.subject_name%></h1>

    <h3><a href="/subjects/<%=subjectstudent.SubjectId%>/enrolledstudents">return to enrolled students list for Subject:  <%=subjectstudent.Subject.subject_name%></a></h3>

    <table class='vertical'>
        <tr>
            <th>First Name</th>
            <td><%=subjectstudent.Student.first_name%></td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td><%=subjectstudent.Student.last_name%></td>
        </tr>
        <tr>
            <th>Email</th>
            <td><%=subjectstudent.Student.email%></td>
        </tr>
        <tr>
            <th>Subject</th>
            <td><%=subjectstudent.Subject.subject_name%></td>
        </tr>
        
        <tr>
            <th>Score</th>
        </tr>
        <tr>
            <td>
                <form action='/subjects/<%=subjectstudent.id%>/givescore' method='post'>
                <input type='hidden' name='SubjectId' value='<%=subjectstudent.SubjectId%>'>
                <input type='text' name='Score'><br>
                <input type='submit' value = 'Add Score'>
            </form>
            </td>
        </tr>
    </table>
</body>
</html>
