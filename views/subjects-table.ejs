<html>

<head>
    <link href="/style/style.css" rel="stylesheet">
</head>

<body>
    <div id="tag-line">
        <h1>Welcome to Hacktiv8 School !</h1>
    </div>

    <div id="logo-school">
        <img src="/images/hacktiv8.png">
    </div>

    <div class = "add-link"><a href="/subjects/add">Add New Subject</a></div>

    <div class="data-table">
        <table style="border:1px;">
            <tr>
                <th>Subject Id</th>
                <th>Subject Name</th>
                <th>Teacher List</th>
                <th>Students</th>
                <th>Action</th>
            </tr>
            <% subjects.forEach(function(subject){ %>
                <tr>
                    <td><%= subject.id %></td>
                    <td><%= subject.name %></td> 
                    <td style="text-align:left;padding-left:10px;">
                        <% subject.Teachers.forEach(function(teacher) {%>
                        <li><%= teacher.name %></li>
                        <% }) %>
                    </td>
                    <td>
                        <a href="subjects/<%= subject.id %>/enrolledstudents">Enrolled Students</a>
                    </td>
                    <td>
                            <a href='subjects/edit/<%= subject.id %>'>Edit</a>   
                            <a href='subjects/delete/<%= subject.id %>'>Delete</a>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>


</body>

</html>