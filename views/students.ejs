<html>
    <head>
        <title>
            WEBSITE SMDIA
        </title>
        <link href="./css/teachers.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
    </head>

    <body>
        <header>
            <h1><%= title %></h1>
        </header>
        
        <div>
            <button class="button1">
                <a href="./students/add">
                    Add Student
                </a>
            </button>
        </div>
        <br>
        
        <table align="center">
            <tr>
                <th>ID</th>
                <th>First Name</th> 
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
                <th>Options</th>
            </tr>
            <% for (var i = 0; i < arrStudents.length; i++) { %>
            <tr>
                <td><%= arrStudents[i].id %></td>
                <td><%= arrStudents[i].first_name %></td>
                <td><%= arrStudents[i].last_name %></td>
                <td><%= arrStudents[i].email %></td>
                <td><a href='students/<%=arrStudents[i].id%>/addsubject'>Add Score</a></td>
                <td><a href='students/edit/<%=arrStudents[i].id%>'>Edit</a> | <a href='students/delete/<%=arrStudents[i].id%>'>Delete</a></td>
            </tr>
            <% } %>
        </table>
        
    </body>
</html>