<!DOCTYPE>
<html>
    <head>
        <meta charset="utf-8" />
        <title><%= title %></title>
    </head>
    <body>
        <div id="header">
            <div class="logo"></div>
            <div class="menu">
                <ul>
                    <li><a href="/teachers">Teacher</a></li>
                    <li><a href="/students">Student</a></li>
                    <li><a href="/subjects">Subject</a></li>
                </ul>
            </div>
        </div>
        <h1><%= heading %></h1>
        <a href="/students/add">Add Students</a>
        <table>
            <h3><%= body %></h3>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Option</td>
                </tr>
            </thead>
            <tbody>
                <% no= 1%>
                <% for(let i=0; i<data.length; i++){ %>
                <tr>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].first_name %></td>
                    <td><%= data[i].last_name %></td>
                    <td><%= data[i].email %></td>
                    <td>
                        <a href="/students/edit/<%= data[i].id %>">Edit</a>
                        <a href="/students/delete/<%= data[i].id %>">Delete</a>
                    </td>
                </tr>
                <% no++%>
                <% } %>
            </tbody>
        </table>
    </body>
</html>