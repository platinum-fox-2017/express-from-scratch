<html>
    <head>
        <link href="/style/style.css" rel="stylesheet">
    </head>
    <body>
        <div id="tag-line">
            <h1>Welcome to Hacktiv8 School !</h1>
        </div>
        
        <div id = "logo-school">
            <img src="/images/hacktiv8.png">
        </div>

        <div class="insert-form">
            <form action="/students/<%= students.id %>/addsubject" method="POST">
                <input type="text" name="student_name" value="<%= students.name %>" style="width:300px;height:30px" disabled>
                <br>
                <br>
                <input type="email" name="student_email" value = "<%= students.email %>" style="width:300px;height:30px" disabled>
                <br>
                <br>
                <select name="student_subject">
                        <% subjects.forEach(function(subject) { %>
                            <option value=<%= subject.id %>><%= subject.name %></option>
                        <% })%>
                </select>
                <br>
                <br>
                <input type="submit" value="Update !" style="margin-left:35%;width:100px;height:30px">
            </form>
        </div>        
    </body>
</html>