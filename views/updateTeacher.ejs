<% include ./partials/header%>
<container>
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
        <form action="/teachers/update/<%=dataTeacher.id%>" method="post">
            <div class="form-group">
                <label for="first_name" class="col-form-label">First Name:</label>
                <input type="text" class="form-control" name="first_name" value="<%=dataTeacher.first_name%>">
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Last Name:</label>
                <input type="text" class="form-control" name="last_name" value="<%=dataTeacher.last_name%>">
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Email:</label>
                <input type="email" class="form-control" name="email" value="<%=dataTeacher.email%>">
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Subject:</label>
                <select name="id_subject">
                    <%dataSubject.forEach(data=>{%>
                        <option value=<%=data.id%>><%=data.name%></option>
                    <%})%>
                </select>
            </div>
            <button>UPDATE</button>
        </form>
        </div>
    </div>
</container>
