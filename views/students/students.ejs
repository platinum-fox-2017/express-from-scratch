<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Students Data</title>

   <link rel="stylesheet" href="/css/style.css">
</head>

    <body>
        <ul id="nav_bar">
             <li><a href="/students">Students</a></li>
             <li><a href="/teachers">Teachers</a></li>
             <li><a href="/subjects">Subjects</a></li>
        </ul>
        <h1>
            All Students Data
        </h1>
        <h3>
            <a href = "/students/add">add student</a>
        </h3>
        <div>
            <table>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                    <th>Options</th>
                </tr>
                    <% for(let i = 0; i < students.length; i++){%>
                        <tr>
                            <td><%=i+1%></td>
                            <td><%=students[i].id%></td>
                            <td><%=students[i].first_name%></td>
                            <td><%=students[i].last_name%></td>
                            <td><%=students[i].fullname()%></td>
                            <td><%=students[i].email%></td>
                            <td><a href="/students/<%=students[i].id%>/addsubject">Add Subject</td>
                            <td><a href="/students/edit/<%=students[i].id%>">Edit</a> |
                            <a href="/students/delete/<%=students[i].id%>">Delete</td>
                        </tr>
                    <%}%>
            </table>
        </div>
    </body>
