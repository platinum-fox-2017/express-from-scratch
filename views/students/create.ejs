<%- include ../templates/header.ejs %>
  <div class="container">
    <br>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/students">Students Data</a></li>
      <li class="breadcrumb-item active">Create New</li>
    </ol>
    <h3>Add Student Data</h3>
    <% if(alert.message != '') { %>
    <div class="alert alert-<%= alert.status %>">
      <%= alert.message %>
    </div>
    <% } %>
    <form action="/students/create" method="post">
      <div class="form-group">
        <label for="firstName">First Name:</label>
        <input type="text" value="<%= data.firstName %>" class="form-control" name="firstName" id="firstName" >
      </div>
      <div class="form-group">
        <label for="lastName">Last Name:</label>
        <input type="text" value="<%= data.lastName %>" class="form-control" name="lastName" id="lastName">
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" value="<%= data.email %>" class="form-control" name="email" id="email">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <%- include ../templates/footer.ejs %>
