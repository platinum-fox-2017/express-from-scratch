<body>
    <h1>Update Score</h1>
    <form name="formUpdateScore" method="POST" action="/subjects/<%= data_subjects[0].id %>/givescore">
    <table>
        <tr>
        <td>Name</td>
        <td><input type="text" name="first_name" value="<%= data_subjects[0].Student.first_name+' '+data_subjects[0].Student.last_name %>" required readonly></td>
        </tr>
        <tr>
        <td>Score</td>
        <td><input type="text" name="score" value="<%=data_subjects[0].score %>" required></td>
        </tr>
        <tr>
        <td colspan="2"><input type="submit" value="Save" ></td>
        </tr>
    </table>
    </form>
</body>
