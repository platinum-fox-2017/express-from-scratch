<% include ../v_index%>
<container>
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
        <form action="/students/<%=student.id%>/addsubject" method="post">
            <div class="form-group">
                <label for="first_name" class="col-form-label">First Name:</label>
                <input type="text" class="form-control" value="<%=student.first_name%>" readonly> 
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Last Name:</label>
                <input type="text" class="form-control" value="<%=student.last_name%>" readonly>
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Email:</label>
                <input type="email" class="form-control" value="<%=student.email%>"readonly>
            </div>
            <div class="form-group">
                <label for="addSubject" class="col-form-label">Adding Subject:</label>
                <select name="id_subject">
                    <%subject.forEach(data=>{%>
                        <option value=<%=data.id%>><%=data.subject_name%></option>
                    <%})%>
                </select>
            </div>
            <button>Add Student Subject</button> 
        </form>            
        </div>
    </div>
</container>
