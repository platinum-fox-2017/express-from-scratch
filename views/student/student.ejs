<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js">
    <%- include('../metahead'); %>
    <title>Document</title>
</head>
<body>
    <a href="/student/back">back</a>
    <a href="/student/add">add</a>
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Email</th>
                <th>Action</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            <%studentData.forEach(each=>{%>
                <tr>
                    <td><%=each.id%></td>
                    <td><%=each.first_name%></td>
                    <td><%=each.last_name%></td>
                    <td><%=each.email%></td>
                    <td><a href="/student/addSubject/<%=each.id%>">Add Subject</a></td>
                    <td>
                        <a  href="/student/edit/<%=each.id%>">Edit</a>
                        <a id="delete" href="/student/delete/<%=each.id%>" onclick="return confirm('Yakin mau delete Guru: \n Klik cancel untuk membatalkan')">Delete</a>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $(document).ready(function() {
            $("button").click(function() {
                swal("Success Message Title", "Well done, you pressed a button", "success")
            });
        })
    </script>
</body>
</html>