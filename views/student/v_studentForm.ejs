<% include ../v_index%>
<container>
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
        <form action="/students/<%=action === 'add' ? 'add' : 'edit'%>/<%=student.id%>" method="post">
            <div class="form-group">
                <label for="first_name" class="col-form-label">First Name:</label>
                <input type="text" class="form-control" name="first_name" value="<%=student.first_name%>">
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Last Name:</label>
                <input type="text" class="form-control" name="last_name" value="<%=student.last_name%>">
            </div>
            <div class="form-group">
                <label for="last_name" class="col-form-label">Email:</label>
                <input type="email" class="form-control" name="email" value="<%=student.email%>">
            </div>
            <button><%=action === 'add' ? 'Add Student' : 'Edit Student'%></button> 
        </form>            
        </div>
    </div>
</container>
