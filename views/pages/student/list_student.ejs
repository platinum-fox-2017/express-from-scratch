<!DOCTYPE html>
<html lang="en">

    <head>
        <style>

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
        
        </style>
    </head>

    <body>
        <a href="/">Index</a>
        <h2>All Students Data</h2>
        <a href="/students/add">Add Students Data</a>
        <form>
            <table>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Actions</th>
                <th>Options</th>
            </tr>
            <% for(let i = 0; i < data.length; i++) {%>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= data[i].first_name %></td>
                    <td><%= data[i].last_name %></td>
                    <td><%= data[i].getFullname() %></td>
                    <td><%= data[i].email %></td>
                    <td><a href="/students/<%= data[i].id %>/addsubject">Add Subject</a></td>
                    <td><a href="/students/edit/<%= data[i].id %>">Edit</a> | <input type="submit" formmethod="post" value="delete" formaction="/students/delete/<%= data[i].id %>" onclick="return confirm('delete this student?')"></td>
                </tr>
            <% } %>
        </table>
        </form>

    </body>

</html>

