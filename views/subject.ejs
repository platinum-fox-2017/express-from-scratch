<!DOCTYPE html>
<%include ./partials/header%>
<html>
  <head>
    <meta charset="utf-8">
    <title>SUBJECT</title>
  </head>
  <body>
    <table>
      <form action="/subject/add" method="POST" >
          <input name="name" type="text" placeholder="Subject Name">
          <input type="submit" value="add new Subject">
      </form>
    </table>
    <br>
    <table border = '1'>
      <thead>
        <td>ID</td>
        <td>NAME</td>
        <td>TEACHER</td>
        <td>ENROLLED STUDENTS</td>
        <td>OPTION</td>
      </thead>
      <tbody>
        <%dataSubject.forEach(subject=>{%>
          <tr>
            <td><%=subject.id%></td>
            <td><%=subject.name%></td>
            <td>
              <%subject.Teachers.forEach(teacher=>{%>
                <ul>
                  <li><%=`${teacher.first_name} ${teacher.last_name}`%></li>
                </ul>
              <%})%>
            </td>
            <td> <a href=" "><button type="button" name="button">SHOW ENROLLED STUDENTS</button></a></td>
            <td>
            <a href="/subjects/updateTeachers">
              <button type="button" name="button">EDIT</button> </a>
            <br>
          <a href="subject/delete/<%=subject.id%>"onclick="return confirm('Yakin mau delete Guru: \n<%=subject.first_name%>' '<%=subject.last_name%>\n Klik cancel untuk membatalkan')">
            <button type="button" name="button">DELETE</button> </a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>
