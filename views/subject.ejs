<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <div id="header">
            <div class="logo"></div>
            <div class="menu">
                <ul>
                    <li><a href="/teachers">Teacher</a></li>
                    <li><a href="/students">Student</a></li>
                    <li><a href="/subjects">Subject</a></li>
                </ul>
            </div>
        </div>
        <a href="/subjects/add">Add Subject</a>
        <h1><%= heading %></h1>
        <table>
            <h3><%= body %></h3>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Subject Name</td>
                    <td>Option</td>
                </tr>
            </thead>
            <tbody>
                <% no= 1%>
                <% for(let i=0; i<data.length; i++){ %>
                <tr>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].subject_name %></td>
                    <td>
                        <a href="/subjects/edit/<%= data[i].id %>">Edit</a>
                        <a href="/subjects/delete/<%= data[i].id %>">Delete</a>
                    </td>
                </tr>
                <% no++%>
                <% } %>
            </tbody>
        </table>
    </body>
</html>