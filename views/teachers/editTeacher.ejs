<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Teachers Data</title>

   <link rel="stylesheet" href="/css/style.css">
</head>

    <body>
        <ul id="nav_bar">
             <li><a href="/students">Students</a></li>
             <li><a href="/teachers">Teachers</a></li>
             <li><a href="/subjects">Subjects</a></li>
        </ul>
        <h1>
            Edit Teachers Data
        </h1>

        <form action='/teachers/edit/' method='post'>
            <input type='hidden' value= "<%=tempObj.id%>" name = "id">
            First name: <br>
            <input type='text' value= "<%=tempObj.first_name%>" name='firstname'><br>
            Last name: <br>
            <input type='text' value= "<%=tempObj.last_name%>" name='lastname'><br>
            Email:<br>
            <input type='text' value= "<%=tempObj.email%>" name = 'email'><br>
            Subject:<br>
            <select name='SubjectId'>
                <% for(let i = 0; i < tempObj.subject.length; i++){%>
                <option
                <% if(tempObj.subject[i].id==tempObj.SubjectId){%>
                    selected = "selected"
                <%}%>
                value="<%=tempObj.subject[i].id%>"><%=tempObj.subject[i].subject_name%></option>
                <%}%>
            </select><br>
            <input type='submit' value = 'Edit Teacher'>
        </form>
    </body>
